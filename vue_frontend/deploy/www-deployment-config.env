# Laravel Backend www Deployment Configuration
# Copy this file and update the values for your environment

# Project paths
PROJECT_ROOT=/path/to/your/project
WWW_DIR=/home/user/www

# Server configuration
WEB_USER=www-data
WEB_GROUP=www-data

# Domain configuration
API_DOMAIN=www.yourdomain.com
API_URL=https://www.yourdomain.com

# Database configuration (update these in your .env file)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Laravel configuration
APP_NAME="Your API Name"
APP_ENV=production
APP_DEBUG=false

# CORS configuration
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,subdomain.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Backup configuration
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/home/user/backups

# Deployment options
SKIP_COMPOSER_INSTALL=false
SKIP_MIGRATIONS=false
SKIP_TESTS=false
CREATE_BACKUP=true
